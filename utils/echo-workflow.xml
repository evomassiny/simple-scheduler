<?xml version="1.0"?>
<job name="job-name">
  <taskFlow>
    <task name="A" runAsMe="true">
      <genericInformation>
        <info name="NODE_ACCESS_TOKEN" value="cluster_name_1"/>
      </genericInformation>
      <parallel numberOfNodes="20">
        <topology>
          <bestProximity/>
        </topology>
      </parallel>
      <nativeExecutable>
        <staticCommand value="bash">
          <arguments>
            <argument value="-c"/>
            <argument value="sleep 5;  echo A"/>
          </arguments>
        </staticCommand>
      </nativeExecutable>
    </task>
    <task name="B" runAsMe="true">
      <genericInformation>
        <info name="NODE_ACCESS_TOKEN" value="cluster_name_2"/>
      </genericInformation>
      <depends>
        <task ref="A"/>
      </depends>
      <nativeExecutable>
        <staticCommand value="bash">
          <arguments>
            <argument value="-c"/>
            <argument value="sleep 60;  echo B"/>
          </arguments>
        </staticCommand>
      </nativeExecutable>
    </task>
    <task name="C" runAsMe="true">
      <genericInformation>
        <info name="NODE_ACCESS_TOKEN" value="cluster_name_2"/>
      </genericInformation>
      <depends>
        <task ref="B"/>
      </depends>
      <nativeExecutable>
        <staticCommand value="bash">
          <arguments>
            <argument value="-c"/>
            <argument value="sleep 5;  echo C"/>
          </arguments>
        </staticCommand>
      </nativeExecutable>
    </task>
  </taskFlow>
</job>
